resources:
{% for index in range(1, properties['count']|int + 1) %}
{% set NAME_PREFIX = env['deployment'] + '-' + index|string %}
- name: {{ NAME_PREFIX }}
  type: compute.v1.instance
  properties:
    zone: {{ properties['zone'] }}
    machineType: https://www.googleapis.com/compute/v1/projects/{{ env['project'] }}/zones/{{ properties['zone'] }}/machineTypes/{{ properties['machineType'] }}
    metadata:
      items:
        - key: user-data
          value: |
            #cloud-config

            coreos:
              units:
                - name: "concourse-worker.service"
                  enable: true
                  command: "start"
                  content: |
                    [Unit]
                    Description=Concourse Worker
                    After=docker.service

                    [Service]
                    Restart=always
                    ExecStart=/opt/concourse-worker.sh

            write_files:
              - path: "/opt/concourse-tsa-public-key"
                permissions: "0440"
                owner: "root"
                encoding: "base64"
                content: ""
              - path: "/opt/concourse-tsa-worker-private-key"
                permissions: "0440"
                owner: "root"
                encoding: "base64"
                content: ""
              - path: "/opt/concourse-worker.sh"
                permissions: "0755"
                owner: "root"
                content: |
                  #!/bin/sh
                  # -*- mode: sh -*-

                  if [[ ! -f /opt/concourse ]]; then
                      curl -Lo /opt/concourse https://github.com/concourse/concourse/releases/download/v2.6.0/concourse_linux_amd64
                      chmod +x /opt/concourse
                  fi

                  if [[ "$(mount | grep /proc/xen)" != "" ]]; then
                      umount /proc/xen || true
                  fi

                  mkdir -p /var/lib/concourse

                  exec /opt/concourse worker \
                      --bind-ip=0.0.0.0 \
                      --work-dir=/var/lib/concourse \
                      --tsa-host={{ properties["tsa"] }} \
                      --tsa-public-key=/opt/concourse-tsa-public-key \
                      --tsa-worker-private-key=/opt/concourse-tsa-worker-private-key
    disks:
    - deviceName: boot
      type: PERSISTENT
      boot: true
      autoDelete: true
      initializeParams:
        diskName: {{ NAME_PREFIX }}-disk
        sourceImage: https://www.googleapis.com/compute/v1/projects/coreos-cloud/global/images/family/coreos-stable
        diskSizeGb: 100

    networkInterfaces:
    - network: https://www.googleapis.com/compute/v1/projects/{{ env['project'] }}/global/networks/default
      {% if properties['hasExternalIp'] %}
      accessConfigs:
      - name: external-nat
        type: ONE_TO_ONE_NAT
      {% endif %}
{% endfor %}
